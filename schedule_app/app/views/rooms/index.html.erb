<p id="notice"><%= notice %></p>

<%= link_to "Home", root_path %>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Building</th>
      <th>Number</th>
      <th> cap</th>
      <th>Comp avail</th>
      <th>Seat avail</th>
      <th>Seat type</th>
      <th>Food</th>
      <th>Dept</th>
      <th>Room type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.building %></td>
        <td><%= room.number %></td>
        <td><%= room.cap %></td>
        <td><%= room.comp_avail %></td>
        <td><%= room.seat_avail %></td>
        <td><%= room.seat_type %></td>
        <td><%= room.food %></td>
        <td><%= room.dept %></td>
        <td><%= room.room_type %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag(import_schedules_path, :multipart => true) do %> 
<h1>Upload Schedules then return home to search!</h1>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload Schedules" %>
<% end %>
